<?php

namespace Drupal\module-loader\Form;

use Drupal\Core\Form\ConfigFormBase;
use Drupal\Core\Form\FormStateInterface;

/**
 * Module Loader settings form.
 */
class ModuleLoaderSettingsForm extends ConfigFormBase {

  /**
   * {@inheritdoc}
   */
  public function getFormId() {
    return 'module-loader_settings_form';
  }

  /**
   * {@inheritdoc}
   */
  protected function getEditableConfigNames() {
    return ['module-loader.settings'];
  }

  /**
   * {@inheritdoc}
   */
  public function buildForm(array $form, FormStateInterface $form_state) {
    $config = $this->config('module-loader.settings');

    $form['version'] = [
      '#type' => 'textfield',
      '#title' => $this->t('Version number'),
      '#default_value' => $config->get('version'),
    ];

    return parent::buildForm($form, $form_state);
  }

  /**
   * {@inheritdoc}
   */
  public function submitForm(array &$form, FormStateInterface $form_state) {
    $config = $this->config('module-loader.settings');
    $config->set('version', $form_state->getValue('version'));
    $config->save();

    parent::submitForm($form, $form_state);
  }

}
