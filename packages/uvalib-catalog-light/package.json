{
  "devDependencies": {
    "@open-wc/building-rollup": "^1.10.0",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.33",
    "@web/dev-server": "^0.1.18",
    "@web/dev-server-storybook": "^0.3.5",
    "@web/test-runner": "^0.12.20",
    "deepmerge": "^4.2.2",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.3",
    "sass": "^1.35.2"
  },
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "storybook": "web-dev-server -c .storybook/server.mjs",
    "storybook:build": "build-storybook",
    "build:css": "sass -I node_modules -I ../../node_modules/ src/UvalibCatalogLight.scss:src/UvalibCatalogLight.css && node ../../node_modules/@uvalib/web-styles/tools/build-css.mjs src/*.css",
    "build": "npm run build:css && rimraf dist && rollup -c rollup.config.js",
    "start:build": "npm run build && web-dev-server --root-dir dist --app-index index.html --open --compatibility none",
    "start": "web-dev-server"
  },
  "name": "@uvalib/uvalib-catalog-light",
  "version": "0.0.1",
  "description": "Webcomponent uvalib-catalog-light following open-wc recommendations",
  "author": "uvalib-catalog-light",
  "license": "MIT",
  "dependencies": {
    "@spectrum-web-components/bundle": "^0.22.3",
    "@uvalib/data-models": "^0.0.1",
    "@uvalib/uvalib-page": "^0.0.9",
    "@uvalib/web-styles": "^1.3.9",
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
