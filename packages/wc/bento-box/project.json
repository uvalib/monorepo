{
  "name": "wc-bento-box",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/wc/bento-box/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/wc/bento-box",
        "main": "packages/wc/bento-box/src/index.ts",
        "tsConfig": "packages/wc/bento-box/tsconfig.lib.json",
        "assets": ["packages/wc/bento-box/*.md"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs wc-bento-box {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/wc/bento-box/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/wc/bento-box/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
