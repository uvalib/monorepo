{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "incremental": true,
    "rootDir": "./",
    "outDir": "dist",
    "typeRoots": ["./typings", "./node_modules/@types", "../../node_modules/@types"]
  },
  "include": ["**/*.ts"]
}
