{
  "name": "@uvalib/uvalib-scroll-to-top",
  "version": "0.0.4",
  "description": "Webcomponent uvalib-scroll-to-top following open-wc recommendations",
  "author": "uvalib-scroll-to-top",
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "start": "web-dev-server",
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "storybook": "web-dev-server -c .storybook/server.mjs",
    "storybook:build": "build-storybook",
    "build:css": "sass -I node_modules -I ../../node_modules/ src:src && node ../../node_modules/@uvalib/web-styles/tools/build-css.mjs src/*.css"
  },
  "dependencies": {
    "@uvalib/uvalib-analytics": "^0.0.2",
    "@uvalib/uvalib-icon": "^0.0.6",
    "@uvalib/web-styles": "^1.3.14",
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.33",
    "@web/dev-server": "^0.1.20",
    "@web/dev-server-storybook": "^0.3.7",
    "@web/test-runner": "^0.12.20",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
