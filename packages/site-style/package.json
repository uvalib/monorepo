{
  "name": "@uvalib/site-style",
  "description": "Webcomponent site-style following open-wc recommendations",
  "license": "MIT",
  "author": "site-style",
  "version": "0.0.0",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./site-style.js": "./dist/src/site-style.js"
  },
  "scripts": {
    "syncStyles": "node ./scripts/scssColors2Lit.js",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "pnpm run syncStyles && tsc",
    "prepublish": "tsc",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --port=$(npx get-port) --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && build-storybook"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "next",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "@web/dev-server": "^0.1.21",
    "@web/test-runner": "next",
    "concurrently": "^5.3.0",
    "drupal_library_theme": "workspace:*",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.3.2",
    "tsconfig": "workspace:*",
    "tslib": "^2.3.1"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "dependencies": {
    "@lit-labs/observers": "^1.1.0"
  }
}