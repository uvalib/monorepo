{% for tag in learningLevel1 %}
    <h2 class="learning__header"><i aria-hidden="true" class="{{ tag.iconCode }}"></i>{{ tag.name }}</h2>
    <div class="learning__container">
        {% for subtag in learningLevel2 %}{% if subtag.parent == tag.uuid %}
            <div>
                <h3 class="h5"><a href="/services/learning/{{ subtag.name | slug }}">{{ subtag.name }}</a></h3>
                <p>{{ subtag.description | safe }}</p>
            </div>
        {% endif %}{% endfor %}
    </div>
{% endfor %}
