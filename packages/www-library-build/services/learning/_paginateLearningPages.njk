---
layout: generalPageLayout.njk
pagination:
    data: learningLevel2
    size: 1
    alias: lL2Item
permalink: "services/learning/{{lL2Item.name | slug}}/index.html"
eleventyComputed:
    title: "Learning Resources: {{lL2Item.name}}"
---
<style>
.learning-header {
        border-bottom: 2px solid var(--uvalib-grey);
    }
.learning-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-content: flex-start;
    align-items: flex-start;
    margin-left: 3em;
}
.learning-container div {
    min-width: 150px;
    max-width: 210px;
    margin-top: 2em;
    margin-right: 2em;
}</style>


{% for l1 in learningLevel1 %}
    {% if lL2Item.parent == l1.uuid %}
        <h2>{{ l1.name }}</h2>
        {{ l1.description | safe }}
    {% endif %}
{% endfor %}
<div class="learning-header">
    <h3>{{ lL2Item.name }}</h3>
</div>
<div class="learning-container">

{% for l3 in learningLevel3 %}
    {% if lL2Item.uuid in l3.tags and not l3.youtube and not l3.youtubelist %}
        <div>
            <div class="h5"><a href="{{ l3.learningItemUrl }}">{{ l3.title }}</a></div>
            {{ l3.body | safe }}
        </div>
    {% endif %}
{% endfor %}

{% for l3 in learningLevel3 %}
    {% if lL2Item.uuid in l3.tags %}
        {% if l3.youtube or l3.youtubelist %}

<div>
    <div><a href="{{ l3.learningItemUrl }}" target="_blank">{% image l3.youtubethumb, " ", "(min-width: 30em) 50vw, 100vw" %}</a></div>
    <div class="h5"><a id="{{ l3.uuid }}" href="{{ l3.learningItemUrl }}">{{ l3.title }}</a></div>
    {{ l3.body | safe }}
</div>

        {% endif %}
    {% endif %}
{% endfor %}

</div>