{
  "name": "@uvalib/web-styles",
  "version": "1.1.4",
  "description": "Styles for the Library web",
  "author": "Doug Chestnut <dougchestnut@users.noreply.github.com>",
  "homepage": "https://github.com/uvalib/monorepo/packages/web-styles#readme",
  "license": "ISC",
  "main": "scss/styles.scss",
  "prettier": "@uvalib/prettier-config",
  "directories": {
    "scss": "scss",
    "css": "css"
  },
  "files": [
    "scss/*.scss",
    "css/*.css",
    "css/*.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uvalib/monorepo.git"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "build": "yarn build:css && yarn build:js && yarn build:docs",
    "build:css": "sass -I node_modules scss:css",
    "build:js": "node ./tools/build-css.mjs",
    "build:docs": "sassdoc scss; sassdoc scss --dest=../../docs/web-styles",
    "serve-docs": "serve sassdoc"
  },
  "bugs": {
    "url": "https://github.com/uvalib/monorepo/issues"
  },
  "devDependencies": {
    "@uvalib/eslint-config": "^0.0.5",
    "@uvalib/prettier-config": "^0.0.7",
    "@uvalib/sassdoctheme": "^0.0.2",
    "common-tags": "^1.8.0",
    "cssnano": "^5.0.5",
    "eslint": "^7.26.0",
    "globby": "^11.0.3",
    "husky": "^6.0.0",
    "postcss": "^8.3.0",
    "postcss-focus-visible": "^5.0.0",
    "postcss-import": "^14.0.2",
    "postcss-inherit": "^4.1.0",
    "postcss-preset-env": "^6.7.0",
    "sass": "^1.33.0",
    "sassdoc": "^2.7.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-pro": "^5.15.3",
    "lit-element": "^2.5.1",
    "serve": "^11.3.2"
  },
  "gitHead": "2ef45349eb10d3bf7ba98374e8369f488aece051",
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
